<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/redPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20.3dp"
        android:src="@mipmap/ic_notify" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layoutContent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13.3dp"
        android:orientation="vertical">

        <net.coding.mart.common.widget.NotifyHtmlTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black_2"
            android:textSize="16sp"
            tools:text="抱歉，您参与的 项目XXX 申请没有通过，感谢您对码市的关注和支持。" />

        <net.coding.mart.common.widget.NotifyHtmlTextView
            android:id="@+id/descript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.3dp"
            android:textColor="@color/font_black_6"
            android:textSize="16sp"
            tools:text="原因：胜任项目的理由描述不完整或不符合要求。" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3.3dp"
            android:textColor="@color/font_black_9"
            android:textSize="12sp"
            tools:text="2016-01-28  10:30" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@id/layoutContent"
        android:layout_marginTop="13.5dp"
        android:background="@color/divide_line" />

</RelativeLayout>