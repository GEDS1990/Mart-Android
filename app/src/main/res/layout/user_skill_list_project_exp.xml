<?xml version="1.0" encoding="utf-8"?>
<net.coding.mart.common.widget.AlignCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardElevation="@dimen/card_z"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#f6f6f6"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/font_black_6"
                android:ellipsize="end"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:lines="1"
                tools:text="cc" />

            <TextView
                android:id="@+id/time"
                android:layout_centerVertical="true"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:layout_toRightOf="@id/title"
                android:lines="1"
                android:textColor="@color/font_black_9"
                android:textSize="12sp"
                tools:text="2015.10 - 2016.09" />

            <ImageView
                android:id="@+id/modifyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="10dp"
                android:scaleType="center"
                android:src="@mipmap/ic_role_modify" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/projectTypeLayout"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="15sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:text="项目类型："
                android:textColor="@color/font_black_9"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/projectType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/font_black_6"
                android:textSize="15sp"
                tools:text="UI设计，需求分析" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="15sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:text="项目描述："
                android:textColor="@color/font_black_9"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/font_black_6"
                android:textSize="15sp"
                tools:text="UI设计，需求分析" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:id="@+id/projectIndustryLayout"
            android:layout_marginRight="10dp"
            android:paddingTop="15sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="行业：　　"
                android:textColor="@color/font_black_9"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/industrys"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/font_black_6"
                android:textSize="15sp"
                tools:text="UI设计，需求分析" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="15sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="我的职责："
                android:textColor="@color/font_black_9"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/duty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/font_black_6"
                android:textSize="15sp"
                tools:text="UI设计，需求分析" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="15sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="展示链接："
                android:textColor="@color/font_black_9"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/font_blue"
                android:textSize="15sp"
                tools:text="UI设计，需求分析" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <View
                style="@style/DivideLine"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:id="@+id/fileLayoutContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</net.coding.mart.common.widget.AlignCardView>
