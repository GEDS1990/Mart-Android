<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/stand_bg"
    android:orientation="vertical"
    tools:context="net.coding.mart.activity.mpay.MPayDynamicListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:text="剩余冻结资金（元)"
            android:textColor="@color/font_black_2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/freezeBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/money_color_yellow"
            android:textSize="30sp"
            tools:text="1000.00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@mipmap/ic_ia_demo"
            android:gravity="center"
            android:id="@+id/freezeTip"
            android:drawablePadding="4dp"
            android:text="解冻说明"
            android:textColor="@color/font_black_9"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/divide_5_bottom" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divide">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headerSection"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_15"
                android:text="明细"
                android:textColor="@color/font_black_9"
                android:textSize="15sp" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
