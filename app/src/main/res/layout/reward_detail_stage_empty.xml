<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/divide">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:layout_centerVertical="true"
                android:id="@+id/stagSection"
                android:layout_marginLeft="@dimen/padding_15"
                android:text="阶段列表"
                android:textColor="@color/font_black_9"
                android:textSize="15sp" />

            <View
                style="@style/DivideSectionTop5" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:background="@color/stand_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/noPassTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableLeft="@mipmap/ic_reward_detail_alert"
                android:drawablePadding="7dp"
                android:text="暂时还没有划分阶段"
                android:textColor="@color/font_black_6"
                android:layout_centerHorizontal="true"
                android:textSize="16sp" />


        </RelativeLayout>

        <include layout="@layout/divide_5_bottom" />
    </LinearLayout>
</layout>
