<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/divide"
    android:orientation="vertical"
    tools:context="net.coding.mart.activity.mpay.pay.InputDepositActivity">

    <View
        style="@style/DivideSectionTop5"
        android:layout_marginTop="10dp" />

    <include layout="@layout/divide_1_12" />

    <RelativeLayout style="@style/SettingListItem"
        android:paddingLeft="15dp">

        <TextView
            style="@style/SettingListItemText1"
            android:text="付款金额" />

        <EditText
            android:id="@+id/money"
            style="@style/SettingListItemText2ModifyPassword"
            android:background="@null"
            android:hint="不可低于 500 元"
            android:inputType="numberDecimal"
            android:text="500"
            android:editable="false"
            android:enabled="false"
            tools:text="" />

    </RelativeLayout>

    <include layout="@layout/divide_10_bottom" />

    <TextView
        android:textSize="12sp"
        android:drawableLeft="@mipmap/tip_input_deposit"
        android:layout_marginLeft="15dp"
        android:drawablePadding="5dp"
        android:text="支付订金 500 元，项目启动前取消项目会全额退款。"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/sendButton"
        style="@style/SendButton"
        android:layout_marginBottom="5dp"
        android:layout_height="48dp"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:text="下一步" />

    <TextView
        android:id="@+id/tip"
        android:textSize="12sp"
        android:layout_marginLeft="15dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
