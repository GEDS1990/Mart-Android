<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/divide"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        app:cardElevation="@dimen/card_z"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp1080_30"
        android:layout_marginRight="@dimen/dp1080_30"
        android:translationZ="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1080_121"
                android:background="@color/white"
                android:drawableLeft="@mipmap/developer_cart"
                android:drawablePadding="@dimen/dp1080_24"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp1080_45"
                android:text="测试"
                android:textColor="#666666"
                android:textSize="@dimen/sp1080_42" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1080_260"
                android:background="#f6f8fb">

                <ImageView
                    android:id="@+id/iv_img"
                    android:background="@mipmap/my_huoguo_list_image"
                    android:layout_width="@dimen/dp1080_200"
                    android:layout_height="@dimen/dp1080_200"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp1080_36" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/iv_img"
                    android:layout_alignTop="@+id/iv_img"
                    android:layout_marginLeft="@dimen/dp1080_42"
                    android:layout_toRightOf="@+id/iv_img"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/font_black_2"
                        android:textSize="@dimen/sp1080_48"
                        tools:text="公司网站开发" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/font_black_6"
                        android:textSize="@dimen/sp1080_42"
                        tools:text="预估报价：10,500 - 12,000 元" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/font_black_9"
                        android:textSize="@dimen/sp1080_42"
                        tools:text="预估周期：9 - 13 工作日" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:background="@color/white">

                <TextView
                    android:id="@+id/btn_ok"
                    android:layout_centerVertical="true"
                    android:minHeight="25dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/developer_myprice_btn_bg"
                    android:text="查看功能清单"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
