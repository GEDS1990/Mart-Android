<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    android:layout_height="wrap_content"
    tools:context=".setting.ExampleActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".setting.ExampleActivity">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:scaleType="centerInside" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="13.7dp"
            android:layout_marginRight="13.7dp"
            android:layout_marginTop="14dp"
            android:background="#d9d9d9" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#4b4b4b"
            android:textSize="16sp"
            tools:text="信我科技 " />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:textColor="#999999"
                android:textSize="13.3sp"
                tools:text="金额 30.000" />

            <View
                android:layout_width="0.3dp"
                android:layout_height="9.3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:background="#d9d9d9" />

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|left"
                android:textColor="#999999"
                android:textSize="13.3sp"
                tools:text="项目时间 30天" />
        </LinearLayout>

        <TextView
            android:id="@+id/role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.3dp"
            android:layout_marginBottom="13.7dp"
            android:gravity="center"
            android:textColor="#999999"
            android:textSize="13.3sp"
            tools:text="参与角色 设计师" />

    </LinearLayout>
</android.support.v7.widget.CardView>
