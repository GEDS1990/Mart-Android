<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_enterprise_main"
    android:background="@color/divide"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.coding.mart.activity.setting.enterprise.EnterpriseMainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/divide">

            <TextView
                android:id="@+id/codersSection"
                style="@style/RewardDetailSection"
                android:paddingTop="10dp"
                android:text="完善以下信息，即可发布需求"
                android:textSize="13sp" />

        </RelativeLayout>

        <net.coding.mart.common.widget.ListItem2
            android:id="@+id/accountInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            app:itemBottomLine="false"
            app:itemIcon="@mipmap/ic_list_account"
            app:itemText="账户信息" />

        <include layout="@layout/divide_line_15_left" />

        <net.coding.mart.common.widget.ListItem2
            android:id="@+id/enterpriceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            app:itemBottomLine="false"
            app:itemIcon="@mipmap/ic_identity_authentication"
            app:itemText="企业认证" />

        <View
            style="@style/DivideSectionBottom5" />
    </LinearLayout>
</ScrollView>
