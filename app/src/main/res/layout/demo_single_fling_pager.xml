<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guide_background"
    android:orientation="vertical">

    <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="55dp"
        android:clipToPadding="false"
        android:overScrollMode="never"
        android:fadingEdge="none"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:rvp_singlePageFling="true"
        app:rvp_triggerOffset="0.4" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/emojiKeyboardIndicator"
        android:layout_width="match_parent"
        android:layout_height="14.5dp"
        android:orientation="horizontal"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/login"
            android:text="登录码市"
            android:background="@drawable/guide_green_button"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/entrance"
            android:layout_width="0dp"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background="@drawable/guide_gray_button"
            android:text="先用用看"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>
