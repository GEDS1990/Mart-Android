<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp1080_30"
        android:layout_marginRight="@dimen/dp1080_30"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp1080_45"
            android:layout_marginTop="@dimen/dp1080_45"
            android:src="@mipmap/developer_close" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4289DB"
            android:textSize="@dimen/sp1080_72"
            android:layout_gravity="center_horizontal"
            android:text="预估报价保存成功！"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_look"
            android:layout_width="@dimen/dp1080_495"
            android:layout_height="@dimen/dp1080_120"
            android:background="@drawable/solid_blue"
            android:layout_marginTop="@dimen/dp1080_45"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="查看我的报价列表"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp1080_150"
            android:layout_marginRight="@dimen/dp1080_150"
            android:layout_marginTop="@dimen/dp1080_90"
            android:gravity="center_horizontal"
            android:textSize="@dimen/sp1080_36"
            android:textColor="#999999"
            android:text="您可以在发布需求的过程中，将预估功能的报价作为参考链接提供给开发者。"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_marginTop="@dimen/dp1080_90"></View>
    </LinearLayout>

</LinearLayout>
