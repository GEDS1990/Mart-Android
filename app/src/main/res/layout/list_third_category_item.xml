<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutRoot"
        android:layout_width="match_parent"
        android:paddingBottom="15dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp1080_30"
            android:layout_marginTop="@dimen/dp1080_45"
            android:layout_toLeftOf="@+id/iv_add_car"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff222222"
                android:textSize="@dimen/sp1080_45" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp1080_15"
                android:textColor="#ff999999"
                android:textSize="@dimen/sp1080_36" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_add_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/dp1080_30"
            android:paddingRight="@dimen/dp1080_30"
            android:paddingTop="@dimen/dp1080_30"
            android:src="@mipmap/developer_car_add" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp1080_36"
            android:textColor="#ff222222"
            android:layout_toLeftOf="@+id/iv_add_car"
            android:layout_alignBottom="@id/ll_content"
            android:layout_marginBottom="2dip"
            android:visibility="gone"
            android:text="1"/>


        <ImageView
            android:id="@+id/iv_del_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ll_content"
            android:paddingLeft="@dimen/dp1080_30"
            android:paddingRight="@dimen/dp1080_30"
            android:paddingTop="@dimen/dp1080_30"
            android:layout_toLeftOf="@+id/tv_num"
            android:src="@mipmap/developer_car_cancle"
            android:visibility="gone"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_marginLeft="@dimen/dp1080_30"
        android:layout_marginRight="@dimen/dp1080_30"
        android:background="#DDDDDD" />

</LinearLayout>
