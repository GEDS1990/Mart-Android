<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1080_144"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp1080_45"
            android:textColor="#222222"
            android:textSize="@dimen/sp1080_45" />


        <ImageView
            android:id="@+id/iv_add_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp1080_30"
            android:src="@mipmap/developer_car_cancle" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp1080_36"
            android:textColor="#ff222222"
            android:layout_toLeftOf="@+id/iv_add_car"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:text="1"/>


        <ImageView
            android:id="@+id/iv_del_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp1080_30"
            android:layout_toLeftOf="@+id/tv_num"
            android:src="@mipmap/developer_car_cancle"
            android:visibility="gone"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_marginLeft="@dimen/dp1080_45"
        android:layout_marginRight="@dimen/dp1080_45"
        android:background="#dddddd"></View>

</LinearLayout>
