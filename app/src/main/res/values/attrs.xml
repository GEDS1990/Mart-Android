<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MinSizeImageView">
        <attr name="minWidth" format="dimension" />
        <attr name="minHeight" format="dimension" />
        <attr name="microSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="Crossed">
        <attr name="dark" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AutoComplete">
        <attr name="emailOnly" format="boolean" />
        <attr name="darkness" format="boolean" />
    </declare-styleable>

    <!--listitem 属性-->

    <attr name="itemIcon" format="reference" />
    <attr name="itemText" format="string" />
    <attr name="itemBottomLine" format="boolean" />


    <declare-styleable name="ListItem1">
        <attr name="itemIcon" />
        <attr name="itemText" />
        <attr name="itemBottomLine" />
    </declare-styleable>

    <declare-styleable name="ListItem2">
        <attr name="itemIcon" />
        <attr name="itemText" />
        <attr name="itemBottomLine" />
        <attr name="itemCheck" format="boolean" />
        <attr name="itemRightText" format="string" />
        <attr name="itemRightTextColor" format="color" />
        <attr name="itemNoPressState" format="boolean" />
    </declare-styleable>

    <!-- -->

    <declare-styleable name="IconTextView">
        <attr name="iconTextIcon" format="reference" />
        <attr name="iconTextTitle" format="string" />
    </declare-styleable>

    <declare-styleable name="IndicatorView">
        <attr name="pointCount" format="integer" />
        <attr name="pointView" format="reference" />
    </declare-styleable>

    <declare-styleable name="CountdownIndicator">
        <attr name="indicator_color" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="ScanMaskView">
        <attr name="scan_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SoundWaveView">
        <attr name="waveColor" format="color" />
        <attr name="soundOriginOrientation">
            <enum name="left" value="1" />
            <enum name="right" value="0" />
        </attr>
    </declare-styleable>

    <declare-styleable name="LoginEditText">
        <attr name="topLine" format="boolean" />
        <attr name="hint" format="string" />
        <attr name="showPassword" format="boolean" />
        <attr name="captcha" format="boolean" />
        <attr name="loginInput" format="enum">
            <enum name="text" value="0" />
            <enum name="password" value="1" />
            <enum name="number" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="EnterLayoutAnimSupportContainer">
        <attr name="isAdjustResize" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomPullRecyclerView">
        <attr name="needBottomSapce" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="WordCountEditText">
        <attr name="wordCountMin" format="integer"/>
        <attr name="wordCountMax" format="integer"/>
        <attr name="wordCountHint" format="string" />
    </declare-styleable>

    <declare-styleable name="HuoguoItem">
        <attr name="huoguoIconChecked" format="reference" />
        <attr name="huoguoIcon" format="reference" />
        <attr name="huoguoText" format="string" />
        <attr name="huoguoDirection" format="boolean" />
    </declare-styleable>

</resources>